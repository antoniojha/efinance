<h1>Listing budgets</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Price</th>
      <th>Transaction date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= budget.title %></td>
        <td>Finance <%= budget.category %></td>
        <td><%= budget.price %></td>
        <td><%= budget.transaction_date %></td>
        <td><%= link_to 'Show', budget %></td> <!--is equivalent to budget_path(budget)-->
        <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
        <td><%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

