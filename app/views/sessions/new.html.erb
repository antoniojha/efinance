<h1>Login to WebFinance</h1>
<% if flash[:alert]%>
<p id="notice"><%=flash[:alert]%>
<%end%>	
<%= form_tag do%>
	Please Log In <br>
	<table>
		<tr>
			<td><%= label_tag :username, 'Name:'%></td>
			<td><%= text_field_tag :username, params[:username], {:class=>'form-control'}%></td>
		</tr>
		<tr>
			<td><%= label_tag :password, 'Password:'%></td>
			<td><%= password_field_tag :password, params[:password], {:class=>'form-control'}%></td>
		</tr>
		<tr>
			<td><%= submit_tag "Login"%></td>
			<td><%= link_to 'New User?', new_user_path%></td>
		</tr>
	</table>
<% end %>
