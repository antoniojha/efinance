<%= form_for @spending, :html=>{:multipart=>true} do |f| %>
  <% if @spending.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@spending.errors.count, "error") %> prohibited this spending from being saved:</h2>

      <ul>
      	<% @spending.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      	<% end %>
      </ul>
    </div>
  <% end %>

  	<div class="field">
    	<%= f.label "Title:" %><br>
    	<%= f.text_field :title, :class=>"form-control" %>
  	</div>
  	<div class="field">
		<%= f.label "Category:"%>
		<%= f.select :category, Order::BUDGET_TYPES, {prompt: 'Select a budget type'}, {:class=>'form-control'}%>
  	</div>
  	<div class="field">
    	<%= f.label "Description:" %><br>
    	<%= f.text_area :description, :class=>"form-control" %>
  	</div>
  	<div class="field">
    	<%= f.label "Transaction Date:" %><i>(m/d/y)</i><br>
    	<% if @spending.transaction_date%>
 			<%= f.text_field :transaction_date, :class=>"form-control"%>
 		<%else%>
 			<%= f.text_field :transaction_date, :class=>"form-control"%>
 		<%end%>
 	</div>
  	<div class="field">
  		<%= f.label "Upload Receipt:"%><br>
  		<%= f.file_field :picture%>
  	</div>
 
  		<%= f.label "Price:"%><br>
  	<div class="input-group">
  		<span class="input-group-addon">$</span> 
	    	<%= f.text_field :price, :class=>"form-control" %>
  	</div><br>
  	<div class="actions">
    	<%= f.submit 'Add Transaction',:class=>"btn btn-primary" %>
  	</div>

<% end %>