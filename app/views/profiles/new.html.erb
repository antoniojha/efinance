<%year= Date.current.strftime('%Y')%>
<script type="text/javascript" charset="utf-8">
  $(function () {
    new Highcharts.Chart({
      chart: { renderTo: 'orders_chart' ,
      		   type: 'column'
      },
      title: { text: 'Spending in <%=year%>'},
      xAxis: { 
              categories: <%=(@months)%>
      },
      yAxis: {
            title: {text: 'Dollars ($)'}
      },
      series: [{
            name: '<%=session[:username]%>',
            data: <%=@total_monthly_spendings%>
        }]
    });
  });
</script>
<% if notice%>
	<p id="notice"><%= notice %></p>
<% end %>
<ul id= "chart_tab" class="nav nav-tabs" role="tablist">
	<li class="active"><%=link_to 'Available Budget','#available_budget'%></li>
	<li><%=link_to 'Monthly Spending','#monthly_spending'%></li>
	<li><%=link_to 'Spending Breakdown','#spending_breakdown'%></li>
</ul>		

<div id="available_budget">
	<%=render "available_budget"%>
</div>
<div id="monthly_spending" class="non_display">
	<div id="orders_chart" style="width: 560px; height: 300px;"></div>
</div>
<div id="spending_breakdown" class="non_display">
